<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_screen"
    tools:context=".DashBoardActivity">

    <TextView
        android:id="@+id/sunrise"
        android:layout_width="192dp"
        android:layout_height="66dp"
        android:layout_below="@+id/Location"
        android:layout_marginTop="178dp"
        android:layout_marginEnd="-17dp"
        android:gravity="center"
        android:paddingLeft="15sp"
        android:text="Sunrise"
        android:textColor="@color/UioT_color"
        android:textSize="20sp"
        android:textStyle="bold"

        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/description"
        android:layout_width="195dp"
        android:layout_height="55dp"
        android:layout_below="@+id/Location"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="-17dp"
        android:gravity="center"
        android:paddingLeft="15sp"
        android:text="Description"
        android:textColor="@color/UioT_color"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/Feels"
        android:layout_width="209dp"
        android:layout_height="45dp"
        android:layout_below="@+id/Location"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="9dp"
        android:gravity="center"
        android:paddingLeft="15sp"
        android:text="Feels"
        android:textColor="@color/UioT_color"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/sunset"
        android:layout_width="215dp"
        android:layout_height="63dp"
        android:layout_below="@+id/Location"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="179dp"
        android:layout_marginEnd="12dp"
        android:gravity="center"
        android:paddingLeft="15sp"
        android:text="Sunset"
        android:textColor="@color/UioT_color"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/Location"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_toEndOf="@+id/as"
        android:gravity="center"
        android:paddingLeft="15sp"
        android:text="Location"
        android:textColor="@color/UioT_color"
        android:textSize="35dp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/as"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/imageView"
        android:paddingLeft="15sp"
        android:text="UiOT"
        android:textColor="@color/UioT_color"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/Temp"
        android:layout_width="207dp"
        android:layout_height="63dp"
        android:layout_below="@+id/Location"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="9dp"
        android:gravity="center"
        android:paddingLeft="15sp"
        android:text="Temp"
        android:textColor="@color/UioT_color"
        android:textSize="40sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/Day"
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Location"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="4dp"
        android:paddingLeft="15sp"
        android:gravity="center"
        android:text="Day"
        android:textColor="@color/UioT_color"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/user" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="189dp"
        android:layout_height="66dp"
        android:layout_below="@+id/as"
        android:layout_marginTop="33dp"
        app:srcCompat="@drawable/cloud" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="196dp"
        android:layout_height="76dp"
        android:layout_below="@+id/sunrise"
        android:layout_marginTop="4dp"
        app:srcCompat="@drawable/sunrise" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="209dp"
        android:layout_height="75dp"
        android:layout_below="@+id/sunset"
        android:layout_marginStart="18dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/imageView4"
        app:srcCompat="@drawable/sunset" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="216dp"
        android:layout_height="104dp"
        android:layout_below="@+id/imageView4"
        android:layout_marginTop="4dp"
        app:srcCompat="@drawable/humidity" />

    <TextView
        android:id="@+id/Humidity"
        android:layout_width="218dp"
        android:layout_height="80dp"
        android:layout_below="@+id/imageView6"
        android:layout_marginStart="-214dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/imageView6"
        android:gravity="center"
        android:text="Humidity"
        android:textColor="@color/UioT_color"
        android:textSize="28sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/button_Home"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_button"
        android:text="HOME"
        android:textColor="@color/editText"
        android:textSize="20sp"
        app:backgroundTint="@null"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/button_MAP"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@+id/button_Home"
        android:background="@drawable/custom_button"
        android:text="MAP"
        android:textColor="@color/editText"
        android:textSize="20sp"
        app:backgroundTint="@null"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/button_Chart"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_button"
        android:text="CHART"
        android:textColor="@color/editText"
        android:textSize="20sp"
        app:backgroundTint="@null"
        tools:ignore="HardcodedText" />

</RelativeLayout>

